<!DOCTYPE html>
<html lang="en">
<%- include('partials/head') %>
<body>
    <%- include('partials/header') %>
    <%- include('partials/modal') %>
    <main id="areaPrincipal">
			<section id="vistaCrearProductos">
				<h1>Edición de Producto</h1>
				<div id="contenedorDeFormulario">
					<form action="/products/updateProduct/<%= product.id %>?_method=PUT" method="POST" >
						<div>
							<!-- el valor del cambiante se agregara automaticamente -->
							<label id="personal" for="userWhoRegistered">Personal que registra:</label>
							<input type="text" name="userWhoRegistered" readonly value="Admin Root" class="inputWidth styleInput">
						</div>
						<div>
							<input type="number" name="id" placeholder="ID"  value="<%= product.id %>" required>
						</div>
						<div>
							<input type="text" name="name" placeholder="Nombre"  value="<%= product.name %>" required>
						</div>
						<div>
							<input type="text" name="category" placeholder="Categoria" value="<%= product.category %>"  required>
						</div>
						<div>
							<input type="number" name="price" placeholder="Precio" value="<%= product.price %>"  required>
						</div>
						<div>
							<input type="number" name="discountRate" placeholder="Porcentaje de descuento" class="descuento" value="<%= product.discountRate %>"  required>
						</div>
						<div>
							<input type="number" name="stock" placeholder="Existencias" min="1"  value="<%= product.stock %>"  required>
						</div>
						<div>
							<input type="text" name="features" placeholder="Caracteristicas"   value="<%= product.features %>" required>
						</div>
						<div>
							<label for="description">Descripción</label>
						</div>
						<div>
							<textarea  name="description" class="desplamiento"  required>
								<%= product.description %>
							</textarea>
						</div>
						<div>
							<label for="image">Cargar Imagen</label>
							<input type="file" name="image"  value="<%= product.image %>" required>
						</div>
						<div id="boton">
							<input type="submit" value="Actualizar" class="botonPrimario">
						</div>
					</form>
				</div>
			</section>
	</main>
    <%- include('partials/footer') %>
</body>
</html>