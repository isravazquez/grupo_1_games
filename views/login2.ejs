<%- include("./partials/head") %>
<script src="/js/LoginAuth.js"></script>
<div class="login-container">
    <div class="loginform-container">
        <div class="loginleft"></div>
        <div class="loginright">
            <form action="/users/login" method="POST" id="loginform">
                <h1>Iniciar sesión</h1>
                <input type="text" name="email" id="email" placeholder="Introduce tu correo electrónico"required>
                <span id="errorEmail">Email must be at least 2 characters long</span>
                <div class="passwordinput">
                    <span id="errorPaswword">Email must be at least 2 characters long</span>
                    <div class="passwordcontainer">
                        <input type="password" name="password" id="password" placeholder="Contraseña"required>
                        <input type="button" value="¿Olvidaste la contraseña" id="fpassword">
                    </div>
                </div>
                <input type="submit" value="CONECTAR" id="conectar">
                <a href="/signup" id="SignUp">Crea tu cuenta</a>
            </form>
        </div>
    </div>
</div>